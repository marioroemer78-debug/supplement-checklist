<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#4F46E5">
    <meta name="description" content="TÃ¤gliche NahrungsergÃ¤nzungsmittel Checkliste">
    <title>Supplement Checkliste</title>
    
    <link rel="manifest" href="manifest.json">
    <link rel="icon" type="image/png" sizes="192x192" href="icon-192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="icon-512.png">
    <link rel="apple-touch-icon" href="icon-192.png">
    
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }
    </style>
</head>
<body>
    <div id="root"></div>

    <script>
        const { useState, useEffect } = React;
        const { createElement: e } = React;

        function CheckIcon() {
            return e('svg', { width: 20, height: 20, viewBox: '0 0 24 24', fill: 'none', stroke: 'currentColor', strokeWidth: 3, strokeLinecap: 'round', strokeLinejoin: 'round' },
                e('polyline', { points: '20 6 9 17 4 12' })
            );
        }

        function PlusIcon() {
            return e('svg', { width: 20, height: 20, viewBox: '0 0 24 24', fill: 'none', stroke: 'currentColor', strokeWidth: 2, strokeLinecap: 'round', strokeLinejoin: 'round' },
                e('line', { x1: 12, y1: 5, x2: 12, y2: 19 }),
                e('line', { x1: 5, y1: 12, x2: 19, y2: 12 })
            );
        }

        function EditIcon() {
            return e('svg', { width: 18, height: 18, viewBox: '0 0 24 24', fill: 'none', stroke: 'currentColor', strokeWidth: 2, strokeLinecap: 'round', strokeLinejoin: 'round' },
                e('path', { d: 'M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7' }),
                e('path', { d: 'M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z' })
            );
        }

        function TrashIcon() {
            return e('svg', { width: 18, height: 18, viewBox: '0 0 24 24', fill: 'none', stroke: 'currentColor', strokeWidth: 2, strokeLinecap: 'round', strokeLinejoin: 'round' },
                e('polyline', { points: '3 6 5 6 21 6' }),
                e('path', { d: 'M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2' })
            );
        }

        function SupplementChecklist() {
            const defaultSupplements = [
                { id: 'iron', name: 'Eisen', color: 'bg-red-100 border-red-300' },
                { id: 'vitaminc', name: 'Vitamin C', color: 'bg-orange-100 border-orange-300' },
                { id: 'magnesium', name: 'Magnesium', color: 'bg-green-100 border-green-300' },
                { id: 'zinc', name: 'Zink', color: 'bg-blue-100 border-blue-300' },
                { id: 'quercetin', name: 'Quercetin', color: 'bg-purple-100 border-purple-300' }
            ];

            const colors = [
                'bg-red-100 border-red-300',
                'bg-orange-100 border-orange-300',
                'bg-yellow-100 border-yellow-300',
                'bg-green-100 border-green-300',
                'bg-blue-100 border-blue-300',
                'bg-indigo-100 border-indigo-300',
                'bg-purple-100 border-purple-300',
                'bg-pink-100 border-pink-300',
                'bg-teal-100 border-teal-300',
                'bg-cyan-100 border-cyan-300'
            ];

            const [supplements, setSupplements] = useState(defaultSupplements);
            const [checkedItems, setCheckedItems] = useState({});
            const [lastResetDate, setLastResetDate] = useState('');
            const [isEditMode, setIsEditMode] = useState(false);
            const [newSupplementName, setNewSupplementName] = useState('');
            const [editingId, setEditingId] = useState(null);
            const [editingName, setEditingName] = useState('');

            useEffect(() => {
                const savedDate = localStorage.getItem('lastResetDate');
                const savedChecks = localStorage.getItem('checkedItems');
                const savedSupplements = localStorage.getItem('supplements');
                
                const today = new Date().toDateString();
                
                if (savedSupplements) {
                    setSupplements(JSON.parse(savedSupplements));
                }
                
                if (savedDate !== today) {
                    setCheckedItems({});
                    setLastResetDate(today);
                    localStorage.setItem('lastResetDate', today);
                    localStorage.setItem('checkedItems', JSON.stringify({}));
                } else {
                    setLastResetDate(savedDate || today);
                    setCheckedItems(savedChecks ? JSON.parse(savedChecks) : {});
                }
            }, []);

            const toggleItem = (id) => {
                if (isEditMode) return;
                const newCheckedItems = {
                    ...checkedItems,
                    [id]: !checkedItems[id]
                };
                setCheckedItems(newCheckedItems);
                localStorage.setItem('checkedItems', JSON.stringify(newCheckedItems));
            };

            const addSupplement = () => {
                if (!newSupplementName.trim()) return;
                
                const newId = 'custom_' + Date.now();
                const randomColor = colors[Math.floor(Math.random() * colors.length)];
                
                const newSupplement = {
                    id: newId,
                    name: newSupplementName.trim(),
                    color: randomColor
                };
                
                const updatedSupplements = [...supplements, newSupplement];
                setSupplements(updatedSupplements);
                localStorage.setItem('supplements', JSON.stringify(updatedSupplements));
                setNewSupplementName('');
            };

            const deleteSupplement = (id) => {
                const updatedSupplements = supplements.filter(sup => sup.id !== id);
                setSupplements(updatedSupplements);
                localStorage.setItem('supplements', JSON.stringify(updatedSupplements));
                
                const newCheckedItems = { ...checkedItems };
                delete newCheckedItems[id];
                setCheckedItems(newCheckedItems);
                localStorage.setItem('checkedItems', JSON.stringify(newCheckedItems));
            };

            const startEditing = (id, name) => {
                setEditingId(id);
                setEditingName(name);
            };

            const saveEdit = (id) => {
                if (!editingName.trim()) {
                    setEditingId(null);
                    return;
                }
                
                const updatedSupplements = supplements.map(sup => 
                    sup.id === id ? { ...sup, name: editingName.trim() } : sup
                );
                setSupplements(updatedSupplements);
                localStorage.setItem('supplements', JSON.stringify(updatedSupplements));
                setEditingId(null);
                setEditingName('');
            };

            const allChecked = supplements.every(sup => checkedItems[sup.id]);
            const checkedCount = supplements.filter(sup => checkedItems[sup.id]).length;

            return e('div', { className: 'min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-6' },
                e('div', { className: 'max-w-md mx-auto' },
                    e('div', { className: 'bg-white rounded-2xl shadow-xl p-6 mb-4' },
                        e('div', { className: 'flex items-center justify-between mb-2' },
                            e('h1', { className: 'text-3xl font-bold text-gray-800' }, 'TÃ¤gliche Supplements'),
                            e('button', {
                                onClick: () => setIsEditMode(!isEditMode),
                                className: `p-2 rounded-lg transition-all ${isEditMode ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-600 hover:bg-gray-300'}`
                            }, e(EditIcon))
                        ),
                        e('p', { className: 'text-gray-500 text-center mb-6' },
                            new Date().toLocaleDateString('de-DE', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })
                        ),
                        !isEditMode && e('div', { className: 'mb-6' },
                            e('div', { className: 'flex justify-between items-center mb-2' },
                                e('span', { className: 'text-sm font-medium text-gray-600' }, 'Fortschritt'),
                                e('span', { className: 'text-sm font-bold text-indigo-600' }, `${checkedCount}/${supplements.length}`)
                            ),
                            e('div', { className: 'w-full bg-gray-200 rounded-full h-3' },
                                e('div', {
                                    className: 'bg-indigo-600 h-3 rounded-full transition-all duration-500',
                                    style: { width: `${supplements.length > 0 ? (checkedCount / supplements.length) * 100 : 0}%` }
                                })
                            )
                        ),
                        e('div', { className: 'space-y-3' },
                            supplements.map(supplement =>
                                e('div', {
                                    key: supplement.id,
                                    className: `${supplement.color} border-2 rounded-xl p-4 transition-all duration-300 ${!isEditMode && 'cursor-pointer hover:shadow-md'} ${checkedItems[supplement.id] && !isEditMode ? 'opacity-60' : 'opacity-100'}`
                                },
                                    editingId === supplement.id
                                        ? e('div', { className: 'flex items-center gap-2' },
                                            e('input', {
                                                type: 'text',
                                                value: editingName,
                                                onChange: (ev) => setEditingName(ev.target.value),
                                                onKeyPress: (ev) => ev.key === 'Enter' && saveEdit(supplement.id),
                                                className: 'flex-1 px-3 py-1 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500',
                                                autoFocus: true
                                            }),
                                            e('button', {
                                                onClick: () => saveEdit(supplement.id),
                                                className: 'px-3 py-1 bg-green-500 text-white rounded-lg text-sm font-medium hover:bg-green-600'
                                            }, 'OK')
                                        )
                                        : e('div', {
                                            onClick: () => !isEditMode && toggleItem(supplement.id),
                                            className: 'flex items-center justify-between'
                                        },
                                            e('span', { className: 'text-lg font-semibold text-gray-800' }, supplement.name),
                                            e('div', { className: 'flex items-center gap-2' },
                                                isEditMode
                                                    ? [
                                                        e('button', {
                                                            key: 'edit',
                                                            onClick: () => startEditing(supplement.id, supplement.name),
                                                            className: 'p-1 text-blue-600 hover:bg-blue-100 rounded'
                                                        }, e(EditIcon)),
                                                        e('button', {
                                                            key: 'delete',
                                                            onClick: () => deleteSupplement(supplement.id),
                                                            className: 'p-1 text-red-600 hover:bg-red-100 rounded'
                                                        }, e(TrashIcon))
                                                    ]
                                                    : e('div', {
                                                        className: `w-8 h-8 rounded-full border-2 flex items-center justify-center transition-all ${checkedItems[supplement.id] ? 'bg-green-500 border-green-500' : 'bg-white border-gray-300'}`
                                                    },
                                                        checkedItems[supplement.id] && e('div', { className: 'text-white' }, e(CheckIcon))
                                                    )
                                            )
                                        )
                                )
                            )
                        ),
                        isEditMode && e('div', { className: 'mt-4 p-4 bg-gray-50 rounded-xl border-2 border-dashed border-gray-300' },
                            e('div', { className: 'flex gap-2' },
                                e('input', {
                                    type: 'text',
                                    value: newSupplementName,
                                    onChange: (ev) => setNewSupplementName(ev.target.value),
                                    onKeyPress: (ev) => ev.key === 'Enter' && addSupplement(),
                                    placeholder: 'Neues Supplement...',
                                    className: 'flex-1 px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500'
                                }),
                                e('button', {
                                    onClick: addSupplement,
                                    className: 'px-4 py-2 bg-indigo-600 text-white rounded-lg font-medium hover:bg-indigo-700 flex items-center gap-2'
                                }, e(PlusIcon), 'HinzufÃ¼gen')
                            )
                        ),
                        allChecked && !isEditMode && supplements.length > 0 && e('div', { className: 'mt-6 bg-green-50 border-2 border-green-300 rounded-xl p-4 text-center' },
                            e('p', { className: 'text-green-700 font-semibold text-lg' }, 'ðŸŽ‰ Alle Supplements eingenommen!')
                        )
                    ),
                    e('p', { className: 'text-center text-sm text-gray-600' },
                        isEditMode ? 'Bearbeitungsmodus: Supplements hinzufÃ¼gen, bearbeiten oder lÃ¶schen' : 'Die Liste wird automatisch jeden Tag zurÃ¼ckgesetzt'
                    )
                )
            );
        }

        ReactDOM.render(React.createElement(SupplementChecklist), document.getElementById('root'));
    </script>

    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('service-worker.js')
                    .then(reg => console.log('Service Worker registriert'))
                    .catch(err => console.log('Service Worker Fehler:', err));
            });
        }
    </script>
</body>
</html>
